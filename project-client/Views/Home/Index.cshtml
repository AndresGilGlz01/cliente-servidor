@model project_client.Models.LoginViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<main class="main">
    <section class="login">
        <h2 class="login-title">Inicio de sesión</h2>
        <form action="/Home/Index" method="POST" class="login-form">
            <label for="email" class="login-label">Correo electrónico</label>
            <input type="email" asp-for="UserName" class="login-input" required>
            <label for="password" class="login-label">Contraseña</label>
            <input type="password" asp-for="Password" class="login-input" required>
            <button type="submit" class="login-button">Iniciar sesión</button>
        </form>
        <p class="login-error">@Html.ValidationSummary(true)</p>
    </section>
</main>